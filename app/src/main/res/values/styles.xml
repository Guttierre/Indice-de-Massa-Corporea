<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--My Style-->
    <style name="StyleTextView" parent="AppTheme">
        <item name="android:textColor">@color/TextView</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_botton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleTextViewResult" parent="AppTheme">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/Result</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_botton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleEditText" parent="AppTheme">
        <item name="android:textColor">@color/EditText</item>
    </style>
    <style name="StyleButton">
        <item name="android:background">@color/ButtonBkg</item>
        <item name="android:textColor">@color/ButtonTxt</item>
    </style>
    <!--____________________-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
